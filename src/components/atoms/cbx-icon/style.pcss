

.cbx-icon{
    display: flex;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
    color: var(--white);
    & i {
        width: inherit;
        height: inherit;
        display: inherit;
        align-items: inherit;
        justify-content: inherit;
        &::before{
            color: inherit;
        }
    }
    &[m-size="10"]{
        width: viewport( xs, 10 );
        height: viewport( xs, 10 );
        & i {
            font-size: viewport( xs, 6 );
        }
    }
    &[m-size="20"]{
        width: viewport( xs, 20 );
        height: viewport( xs, 20 );
        & i {
            font-size: viewport( xs, 12 );
        }
    }
    &[m-size="30"]{
        width: viewport( xs, 30 );
        height: viewport( xs, 30 );
        & i {
            font-size: viewport( xs, 16 );
        }
    }
    &[m-size="40"]{
        width: viewport( xs, 40 );
        height: viewport( xs, 40 );
        & i {
            font-size: viewport( xs, 22 );
        }
    }
    &[m-size="50"]{
        width: viewport( xs, 50 );
        height: viewport( xs, 50 );
        & i {
            font-size: viewport( xs, 30 );
        }
    }
    &[m-mody~=fill]{
        background-color: var(--soft-blue);
    }
    &[m-mody~=border]{
        color: var(--soft-blue);
        border:{ 
            width: viewport( xs, 1 );
            style: solid;
            color: var(--soft-blue);
        }
    }
    &[m-mody~=circle]{
        border-radius: 50%;
    }
    &[m-mody~=rounded]{
        border-radius: borderRadius( xs );
    }
    &[m-mody~=icon-bold]{
        text-shadow: -1px -1px 0 var(--white), -1px -1px 0 var(--white), -1px -1px 0 var(--white);
        @supports (display: grid){
            -webkit-text-stroke: viewport( xs, 1 ); 
            text-shadow: none;
        }
    }
    &[m-mody~=flat]{
        width: auto;
        height: auto;
        &[m-size="10"]{
            & i {
                font-size: viewport( xs, 10 );
            }
        }
        &[m-size="20"]{
            & i {
                font-size: viewport( xs, 20 );
            }
        }
        &[m-size="30"]{
            & i {
                font-size: viewport( xs, 30 );
            }
        }
        &[m-size="40"]{
            & i {
                font-size: viewport( xs, 40 );
            }
        }
        &[m-size="50"]{
            & i {
                font-size: viewport( xs, 50 );
            }
        }
    }
}

