@media width >= 768px{
    .cbx-icon{
        &[m-size="10"]{
            width: 10px;
            height: 10px;
            & i {
                font-size: 6px;
            }
        }
        &[m-size="20"]{
            width: 20px;
            height: 20px;
            & i {
                font-size: 12px;
            }
        }
        &[m-size="30"]{
            width: 30px;
            height: 30px;
            & i {
                font-size: 16px;
            }
        }
        &[m-size="40"]{
            width: 40px;
            height: 40px;
            & i {
                font-size: 22px;
            }
        }
        &[m-size="50"]{
            width: 50px;
            height: 50px;
            & i {
                font-size: 30px;
            }
        }
        &[m-mody~=border]{           
            border-width: 1px;
        }
        &[m-mody~=rounded]{
            border-radius: borderRadius( sm );
        }
        &[m-mody~=icon-bold]{
            @supports (display: grid){
                -webkit-text-stroke: 1px; 
            }
        }
        &[m-mody~=flat]{
            &[m-size="10"]{
                & i {
                    font-size: 10px;
                }
            }
            &[m-size="20"]{
                & i {
                    font-size: 20px;
                }
            }
            &[m-size="30"]{
                & i {
                    font-size: 30px;
                }
            }
            &[m-size="40"]{
                & i {
                    font-size: 40px;
                }
            }
            &[m-size="50"]{
                & i {
                    font-size: 50px;
                }
            }
        }
    }
}

