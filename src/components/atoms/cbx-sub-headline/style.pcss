

.cbx-sub-headline{
    font: {
        size: viewport( xs, 16 );
        family: var(--font-r);
    }
    color: var(--light-gray);
}

@media width >= 768px{
    .cbx-sub-headline{
        font-size: 16px;
    }
}

@media width >= 1024px{
    .cbx-sub-headline{
        font-size:  viewport( lg, 16);
    }
}

@media width >= 1280px{
    .cbx-sub-headline{
        font-size: viewport(xl, 20);
    }
}

@media width >= 1440px{
    .cbx-sub-headline{
        font-size: viewport(xxl, 20);
    }
}