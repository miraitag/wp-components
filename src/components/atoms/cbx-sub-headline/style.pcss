@import '../../mixins.pcss';

.cbx-sub-headline {
	@mixin viewport xs, font-size, 16;
	font-family: var(--font-r);
	color: var(--light-gray);
}

@media (width >= 768px) {
	.cbx-sub-headline {
		font-size: 16px;
	}
}

@media (width >= 1024px) {
	.cbx-sub-headline {
		@mixin viewport lg, font-size, 16;
	}
}

@media (width >= 1280px) {
	.cbx-sub-headline {
		@mixin viewport xl, font-size, 20;
	}
}

@media (width >= 1440px) {
	.cbx-sub-headline {
		@mixin viewport xxl, font-size,  20;
	}
}
