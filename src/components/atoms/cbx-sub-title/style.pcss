

.cbx-sub-title{
    font: {
        size: viewport(xs, 16);
        family: var(--font-r);
    }
    color: var(--darkest-gray);
}

@media width >= 768px{
    .cbx-sub-title{
        font-size: 16px;
    }
}

@media width >= 1024px{
    .cbx-sub-title{
        font-size: viewport(lg, 16);
    }
}

@media width >= 1280px{
    .cbx-sub-title{
        font-size: viewport(xl, 18);
    }
}

@media width >= 1440px{
    .cbx-sub-title{
        font-size: viewport(xxl, 18);
    }
}