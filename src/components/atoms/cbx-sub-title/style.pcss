@import '../../mixins.pcss';

.cbx-sub-title {
	@mixin viewport xs, font-size, 16;
	font-family: var(--font-r);
	color: var(--darkest-gray);
}

@media (width >= 768px) {
	.cbx-sub-title {
		font-size: 16px;
	}
}

@media (width >= 1024px) {
	.cbx-sub-title {
		@mixin viewport lg, font-size, 16;
	}
}

@media (width >= 1280px) {
	.cbx-sub-title {
		@mixin viewport xl, font-size, 18;
	}
}

@media (width >= 1440px) {
	.cbx-sub-title {
		@mixin viewport xxl, font-size, 18;
	}
}
