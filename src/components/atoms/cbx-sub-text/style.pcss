

.cbx-sub-text{
    font:{ 
        size: viewport( xs, 12 );
        family: var(--font-r);
    }
    color: var(--dark-gray);
}

@media width >= 768px{
    .cbx-sub-text{
        font-size: 12px;
    }
}

@media width >= 1024px{
    .cbx-sub-text{
        font-size: viewport( lg, 16);
    }
}

@media width >= 1280px{
    .cbx-sub-text{
        font-size: viewport(xl, 16 );
    }
}

@media width >= 1440px{
    .cbx-sub-text{
        font-size: viewport(xxl, 16);
    }
}