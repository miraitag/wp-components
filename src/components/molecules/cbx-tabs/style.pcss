@import '../../mixins.pcss';

.cbx-tabs {
	& .tabs-menu {
		display: flex;
		@mixin viewport xs, padding, 20;
		& .menu-item {
			&:not(:last-child) {
				@mixin viewport xs, margin-right, 20;
			}
		}
	}
}
@media (--portrait) {
	.cbx-tabs {
		& .tabs-menu {
			padding: 20px;
			& .menu-item {
				&:not(:last-child) {
					margin-right: 20px;
				}
			}
		}
	}
}

@media (--small-desktop) {
	.cbx-tabs {
		& .tabs-menu {
			@mixin viewport lg, padding, 20;
			& .menu-item {
				&:not(:last-child) {
					margin-right: 2viewport (lg, 20);
				}
			}
		}
	}
}
@media (--large-desktop) {
	.cbx-tabs {
		& .tabs-menu {
			@mixin viewport lg, padding, 20;
			& .menu-item {
				&:not(:last-child) {
					margin-right: 2viewport (xl, 20);
				}
			}
		}
	}
}

@media (--full) {
	.cbx-tabs {
		& .tabs-menu {
			@mixin viewport xxl, padding,  20;
			& .menu-item {
				&:not(:last-child) {
					@mixin viewport xxl, margin-right, 20;
				}
			}
		}
	}
}