			@mixin viewport lg, width, 120;
			@mixin viewport lg, height, 75;
		}
		& .credit-button {
			@mixin viewport lg, height, 44;
			@mixin viewport lg, width, 44;
		}
		& .cbx-icon {
			& i {
				&::before {
					@mixin viewport lg, font-size, 8;
				}
			}
		}
		&[m-mody="close-bottom"] {
			@mixin viewport lg, width, 125;
			@mixin viewport lg, height, 85;
			&[m-active="true"] {
				@mixin viewport lg, padding-bottom, 10;
			}
			& .cbx-img {
