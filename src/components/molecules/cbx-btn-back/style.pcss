@import "../../mixins.pcss";

.cbx-btn-back {
	@mixin viewport xs, width, 200;
	@mixin viewport xs, height, 50;
	display: flex;
	align-items: center;
	& .cbx-icon,
	& .cbx-text {
		color: var(--soft-blue);
	}
}

@media (--portrait) {
	.cbx-btn-back {
		width: 200px;
		height: 50px;
	}
}

@media (--small-desktop) {
	.cbx-btn-back {
		display: none;
	}
}
