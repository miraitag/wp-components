			}
		}
		.footer-top,
		.footer-content {
			//padding-bottom: viewport(lg,20);
			margin-bottom: viewport(lg, 20);
		}
		.footer-content {
			.content-item {
				> a {
					height: viewport(lg, 40);
				}
				> ul {
					> li {
						> a {
							span {
								margin-right: viewport(lg, 5);
							}
						}
					}
				}
			}
		}
		.footer-bottom {
			margin-bottom: viewport(lg, 20);
			ul {
				justify-content: space-between;
				> li {
					margin-right: 0;
				}
			}
		}
		.footer-legal {
			> .cbx-legal {
				margin-bottom: 0;
			}
		}
		.footer-costos {
			flex-basis: auto;
			> a {
				flex-basis: auto;
			}
		}
	}
}

